{
  "name": "secure-deploy",
  "version": "0.1.0",
  "description": "Secure frontend deployment system with immutable ENS versioning and Safe multisig",
  "type": "module",
  "bin": {
    "secure-deploy": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && chmod +x ./dist/cli.js",
    "dev": "tsx src/cli.ts",
    "test": "node --test",
    "test:ipfs": "tsx src/test/test-ipfs-simple.ts",
    "test:ens": "tsx src/test/test-ens.ts",
    "test:complete": "tsx src/test/test-complete-versioning.ts",
    "check:domain": "tsx src/test/check-domain.ts",
    "burn-parent-fuses": "tsx src/test/burn-parent-fuses.ts",
    "deploy:safe": "tsx src/test/deploy-with-safe.ts",
    "deploy:safe-sdk": "tsx src/test/deploy-with-safe-sdk.ts",
    "deploy:safe-direct": "tsx src/test/deploy-safe-direct.ts",
    "transfer-to-safe": "tsx src/test/transfer-to-safe.ts",
    "set-contenthash": "tsx src/test/set-contenthash-via-safe.ts",
    "set-contenthash-sdk": "tsx src/test/set-contenthash-sdk.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ipfs",
    "ens",
    "safe",
    "deployment",
    "security",
    "cli"
  ],
  "author": "ETHRome Hackathon Team",
  "license": "MIT",
  "engines": {
    "node": "^20.10.0 || >=21.1.0"
  },
  "dependencies": {
    "@safe-global/sdk-starter-kit": "^3.0.1",
    "@storacha/client": "^1.8.2",
    "dotenv": "^17.2.3",
    "files-from-path": "^1.0.4",
    "multiformats": "^13.4.0",
    "ox": "^0.8.7",
    "spektr": "^0.2.0",
    "varint": "^6.0.0",
    "viem": "^2.21.54"
  },
  "overrides": {
    "@ipld/unixfs": "2.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  }
}
